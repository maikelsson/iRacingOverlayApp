<Window x:Class="iRacingLiveDataOverlay.Views.LiveDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             WindowStyle="None"
             AllowsTransparency="True"
             WindowStartupLocation="CenterScreen"
             Topmost="False"
             FontSize="14"
             Background="Transparent"
             Width="{Binding Source={x:Static SystemParameters.FullPrimaryScreenWidth}}"
             Height="{Binding Source={x:Static SystemParameters.FullPrimaryScreenHeight}}"
             d:DesignHeight="450" d:DesignWidth="800" Foreground="{StaticResource Clouds}" FontFamily="{DynamicResource RobotoM}">

    <Window.Resources>
        <FontFamily x:Key="RobotoM">/Utility/Fonts/Roboto/Roboto-Medium</FontFamily>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--Driver standings-->
        <DataGrid Foreground="{StaticResource Clouds}" Background="Transparent" x:Name="CurrentDrivers" AlternatingRowBackground="Transparent" 
                   Grid.Row="0" Grid.Column="0" Height="300" Width="800" VerticalScrollBarVisibility="Hidden" 
                   AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="None" RowBackground="{StaticResource TransBlackPearl}">
            <DataGrid.Columns>
                <DataGridTextColumn SortDirection="Descending" Header="Pos" Binding="{Binding Path=Live.Position}" Width="60"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}" Width="200"/>
                <DataGridTextColumn Header="IR" Binding="{Binding Path=ShortIRating}" Width="50"/>
                <DataGridTextColumn Header="Best Lap" Binding="{Binding Path=CurrentResults.FastestTime.Display}" Width="100"/>
            </DataGrid.Columns>
            
        </DataGrid>
        

        <!--Display static info, track temps etc-->
        <StackPanel Orientation="Horizontal" Background="{StaticResource TransBlackPearl}" Grid.Column="3" Grid.Row="3" 
                    Height="50" Width="500" Margin="1240,812,0,227"
                    HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Foreground="{StaticResource Clouds}" VerticalAlignment="Center" Text="{Binding Path=TrackTemp, Mode=OneWay}"/>
        </StackPanel>
        
        <!--Relatives, like blackbox-->
        <ItemsControl Background="{StaticResource TransBlackPearl}" 
                      Grid.Column="3" Grid.Row="3"
                      Height="200" Width="500" Margin="1240,867,20,22">
            
        </ItemsControl>
    </Grid>
</Window>
