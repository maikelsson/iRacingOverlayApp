<Window x:Class="iRacingLiveDataOverlay.Views.LiveDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             WindowStyle="None"
             AllowsTransparency="True"
             WindowStartupLocation="CenterScreen"
             Topmost="False"
             FontSize="16"
             Background="Transparent"
             Width="{Binding Source={x:Static SystemParameters.FullPrimaryScreenWidth}}"
             Height="{Binding Source={x:Static SystemParameters.FullPrimaryScreenHeight}}"
             d:DesignHeight="450" d:DesignWidth="800" Foreground="{StaticResource Clouds}">

    <Window.Resources>
        <CollectionViewSource Source="{Binding StandingDrivers}" x:Key="SortedDrivers">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="CurrentResults.Position" Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Display Currentsession time etc.-->
        <WrapPanel Grid.Row="0" Grid.Column="0" x:Name="SessionInfo" Background="{StaticResource TransBlackPearl}" 
                   Height="50" Width="600" Margin="10,10,1950,1337">
            
            <TextBlock VerticalAlignment="Center" FontSize="18" FontWeight="Bold">
                <Run Text="{Binding CurrentSessionType, Mode=OneWay}"/>
                <Run Text="{Binding SessionTimeElapsed, Mode=OneWay}"/>
                <Run Text="/"/>
                <Run Text="{Binding SessionTimeLeft, Mode=OneWay}"/>
            </TextBlock>
        </WrapPanel>

        <DataGrid ItemsSource="{Binding Source={StaticResource SortedDrivers}}" Foreground="{StaticResource Clouds}" Background="{StaticResource TransBlackPearl}"
                  AlternatingRowBackground="{StaticResource TransBlackPearlAlt}" 
                  Height="300" Width="600" VerticalScrollBarVisibility="Hidden" IsReadOnly="True"
                  AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="All"
                  RowBackground="{StaticResource TransBlackPearl}" BorderBrush="{DynamicResource Pumpkin}"  
                  HorizontalAlignment="Left" FontSize="16" Margin="10,55,0,1022">
            <DataGrid.Columns >
                <DataGridTextColumn SortDirection="Ascending" Header="Pos" Binding="{Binding CurrentResults.Position}" Width="30"/>
                <DataGridTextColumn Header="Car" Binding="{Binding Car.CarNumber}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="IR" Binding="{Binding ShortIRating}" Width="50"/>
                <DataGridTextColumn Header="Best Lap" Binding="{Binding CurrentResults.FastestTime.Display}" Width="100"/>
            </DataGrid.Columns>

        </DataGrid>

        <!--<ListView ScrollViewer.VerticalScrollBarVisibility="Hidden" x:Name="StandingDrivers" 
                      Height="300" Width="600" Margin="10,10,1950,1067"
                      Foreground="{StaticResource Clouds}" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="20" DisplayMemberBinding="{Binding Live.Position}"/>
                        <GridViewColumn Width="300" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Width="100" DisplayMemberBinding="{Binding CurrentResults.FastestTime.Display}"/>
                    </GridView>
                </ListView.View>

            </ListView>-->

        <StackPanel Orientation="Horizontal" Background="{DynamicResource TransBlackPearl}" 
                    Height="50" Width="500"
                    HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2050,1060,0,267">

            <!--Track Temp icon and bind-->
            <Image Source="D:\CSharp\iRacingLiveDataOverlay\Utility\Images\road-2-64.png" Width="25" Height="30"/>
            <TextBlock VerticalAlignment="Center" Text="{Binding TrackTemp, Mode=OneWay}"/>

            <!--offtrack icon and bind-->
            <Image Source="D:\CSharp\iRacingLiveDataOverlay\Utility\Images\x-mark-64.png"  Width="20" Height="20"/>
            <TextBlock VerticalAlignment="Center" Text="{Binding OffTracksDisplay, Mode=OneWay}"/>

            <!--Session time and bind-->
            <Image Source="D:\CSharp\iRacingLiveDataOverlay\Utility\Images\clock-5-64.png" Width="25" Height="25"/>
            <TextBlock Text="SOF" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            

        </StackPanel>


        <!--Relatives, like blackbox-->

        <ListView Background="{StaticResource TransBlackPearl}" ItemsSource="{Binding StandingDrivers}"
                      Height="200" Width="500" Margin="2050,1115,10,62" Foreground="{StaticResource Clouds}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding Live.Position, Mode=OneWay}" Margin="2"/>
                        <TextBlock Text="{Binding Name, Mode=OneWay}" Margin="2"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!--Here we display laps and session time left etc..-->
        <StackPanel Orientation="Horizontal" Background="{StaticResource TransBlackPearl}" 
            Height="50" Width="500" Margin="2050,1320,10,7"/>
    </Grid>
</Window>
